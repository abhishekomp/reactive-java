<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- Define a logger for the LogbackLoggingDemo class.
    The name attribute can be either a fully qualified class name or a package name.
    If you do not use a fully qualified class name, then it will not work.
    -->
    <logger name="org.aom._03_logback_demo.LogbackLoggingDemo" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>